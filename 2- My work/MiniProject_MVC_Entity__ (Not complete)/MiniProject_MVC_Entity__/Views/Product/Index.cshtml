@model IEnumerable<MiniProject_MVC_Entity__.Models.Product>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>


<table class="table table-hover">
  <thead>
    <tr>
      
      <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
      <th scope="col">@Html.DisplayNameFor(model => model.Price)</th>
      
    </tr>
  </thead>
  <tbody>
    
      @foreach (var item in Model) {
     <tr class="table-success">
      
      <td>@Html.DisplayFor(modelItem => item.Name)</td>
      <td>@Html.DisplayFor(modelItem => item.Price)</td>
      <td>@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })</td>
    </tr>
      }


     

  </tbody>
</table>